IDI_ICON1 ICON "app-icon.ico"

#include <windows.h>

#define VER_FILEVERSION             0.0.1
#define VER_FILEVERSION_STR         "0.0.1"
#define VER_FILEDESCRIPTION_STR     "Tabeltop RPG DJ"
#define VER_ORIGINALFILENAME_STR    "tabeltopDJ.exe"
#define VER_PRODUCTNAME_STR         "RPG DJ"

VS_VERSION VERSIONINFO
FILEVERSION VER_FILEVERSION

BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040904E4"
        BEGIN
            VALUE "FileDescription",    VER_FILEDESCRIPTION_STR
            VALUE "FileVersion",        VER_FILEVERSION_STR
            VALUE "OriginalFileName",   VER_ORIGINALFILENAME_STR
            VALUE "ProductName",        VER_PRODUCTNAME_STR
        END
    END

    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x409, 1252
    END
END